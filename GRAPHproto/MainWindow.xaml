<Window x:Name="DOCK" x:Class="GRAPHproto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="500">
    <StackPanel x:Name="ROOT">
        <Grid Height="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250*"/>
                <ColumnDefinition Width="250*"/>
            </Grid.ColumnDefinitions>
            <Ellipse Margin="-5,5,5,5" Height="10" Width="10" HorizontalAlignment="Left" Stroke="Black" Fill="Black" Grid.Column="1"/>
            <TextBox Margin=" 10, 0,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="2"/>
        </Grid>
        <DockPanel HorizontalAlignment="Center" Height="20">
            
        </DockPanel>

        <DockPanel HorizontalAlignment="Center">
            <TextBox Margin="1, 1,1,1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            <Ellipse Margin="5,5,5,5" Height="10" Width="10" HorizontalAlignment="Left" Stroke="Black" Fill="Black"/>
            <Rectangle Margin="5,5,5,5" Height="10" Width="10" HorizontalAlignment="Center"/>
            <Ellipse Margin="5,5,5,5" Height="10" Width="10" HorizontalAlignment="Left" Stroke="Black" Fill="Black"/>
            <TextBox Margin="1, 1,1,1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </DockPanel>
    </StackPanel>
     
</Window>
